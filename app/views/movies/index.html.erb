<div class="container" data-controller="search-movies" >
  <header class="flex space-between center-vertically m-y-32">
    <h1 class="inline">Movies</h1>
    <h2 class="flex flex-col m-y-32">Search by Movie, Actor or Director</h2>
  </header>
  <div class="col-sm-6">
    <%= form_with url: movies_path, method: :get, html: {class: "d-flex my-5", data: {search_movies_target: "form"}} do |f| %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Type a keyword",
      data: {
        search_movies_target: "input",
        action: "keyup->search-movies#update"
        }
    %>
    <%= submit_tag "Search", name: "", class: "btn btn-regular btn-primary btn-size-xs" %>
    <% end %>
  </div>

  <div class="col-sm-12" >
    <%= render "list", movies: @movies %>
  </div>
</div>
