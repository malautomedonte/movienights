<body>
  <div class="wrapper-sign-in">
    <div class="background-animation">
      <div class="container-sign-in-form form">
        <header class="flex flex-col center-vertically">
          <%= image_tag "https://static.vecteezy.com/system/resources/previews/002/405/453/original/movie-night-logo-neon-signs-style-text-vector.jpg", class: "logo" %>
          <div class="flex w-100 space-between center-vertically m-b-16">
            <h2 class="white">Log in</h2>
            <span class="white">or</span>
            <div class="buttons-login">
             <%= render "devise/shared/links" %>
            </div>
          </div>
        </header>
        <p class="sign-in-paragraph white">You must be signed in order to proceed.</p>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "white w-100 display-inline text-align-right" %><br />
                <% end %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "button-sign-in btn-primary btn-regular btn-size-s w-100" %>
            </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
