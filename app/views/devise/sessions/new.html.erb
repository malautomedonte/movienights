<body>
  <div class="wrapper-sign-in">
    <div class="background-animation">
      <div class="container-sign-in-form">
        <h2 class="sign-in-title">Log in to Movie Nights!</h2>
        <p class="sign-in-paragraph">You must be signed in in order to proceed.</p>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="login-card">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "button-sign-in" %>
          </div>
        <% end %>
          </div>
        </div>
          <div class="buttons-login">
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</body>
