<h1 class="h1-user-profile">This is your profile, <%= @user.username %>!</h1>
  <div class="container-user-page-details-edit">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs flex">
    <div class="form-input-edit-page-details col-2 p-l-64">
      <%= f.input :email, required: true, autofocus: true %>

      <%= f.input :photo, as: :file %>
      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <hr>
      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn-regular btn-secondary btn-size-s" %>
      </div>

      <div class="unhappy">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn-regular btn-secondary btn-size-s" %></div>
    </div>
    <div class="form-inputs-edit-page-preferences col-2 p-r-64">
      <%= f.input :genres,
                  label: "Choose your favorite genres (up to three)",
                  collection: Genre.all,
                  required: true,
                  input_html: {multiple: true, data: {controller: "tom-select"}, selected: resource.genre_ids} %>
      <%= f.input :directors,
                  label: "Choose your favorite directors (up to three)",
                  collection: Director.all,
                  label_method: :full_name,
                  required: true,
                  input_html: {multiple: true, data: {controller: "tom-select"}, selected: resource.director_ids} %>
      <%= f.input :actors,
                  label: "Choose your favorite actors (up to three)",
                  collection: Actor.all,
                  label_method: :full_name,
                  required: true,
                  input_html: {multiple: true, data: {controller: "tom-select"}, selected: resource.actor_ids} %>
    </div>
  </div>

<% end %>


 <div class="see-all-my-stuff">
    <h2>Your events <%= link_to "See all  ->", events_path, class: "see-all-link" %></h2>
  </div>

<div class="container-user-events-page">
  <div class="user-my-events-page">
  <div class="user-organized-events">
    <% if current_user.events %>
      <h2>I have created <%= @my_events.count %> events so far</h2>
    <% else %>
      <h2>No events yet 🤷🏼‍♀️</h2>
    <% end %>
  </div>
    <% if @my_events.present? %>
      <% @my_events.each do |event| %>
        <div class="event-card card">
          <h4><%= link_to event.title, event_path(event), class: "movie-link" %></h4>
          <h4><%= event.movie.title %></h4>
          <p><%= event.description %></p>
          <p><%= event.location %></p>
          <p><%= event.date %></p>
          <p><%= event.user.username %></p>
          <% if current_user && current_user.id == event.user_id %>
            <%= link_to edit_event_path(event) do %>
              <p><i class="fa-regular fa-pen-to-square edit-button"></i></p>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>No events created by you yet.</p>
    <% end %>
  </div>

  <div class="user-join-events-page">
      <div class="user-attending-events">
    <h2>I am attending to <%= @attended_events.count %> events so far</h2>
  </div>
    <% if @attended_events.present? %>
      <% @attended_events.each do |attended| %>
        <div class="event-card card">
          <h4><%= link_to attended.event.title, event_path(attended.event), class: "movie-link" %></h4>
          <h4><%= attended.event.movie.title %></h4>
          <p><%= attended.event.description %></p>
          <p><%= attended.event.location %></p>
          <p><%= attended.event.date %></p>
          <p><%= attended.event.user.username %></p>
          <p>You are attending!</p>
          <%= link_to "Cancel", event_user_path(id: attended.id, eventuser_id: attended, event_id: pages_myevents_path), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?' }, class: "cancel-button" %>
        </div>
      <% end %>
    <% else %>
      <p>No events attended by you yet.</p>
    <% end %>
  </div>
</div>

<div class="see-all-my-stuff">
  <h2>Your Friends
    <%= link_to friendships_path, class: "see-all-link" do %>
      See all <i class="fas fa-solid fa-arrow-right"></i>
    <% end %>
  </h2>
</div>

<div class="user-friends-page">
  <% if current_user.friends.any? %>
   <%= render 'shared/friends_cards', users: current_user.friends %>
   <% else %>
    <h2><em> Sorry, you have no friends... Yet!</em></h2>
  <% end %>
</div>

