<h1 class="event-page">Today's movienights</h1>

<div class="event-cards-container">
  <% if @events_today.any? %>
    <% @events_today.each do |event| %>
      <div class="event-card">
        <h4><%= event.title %></h4>
        <p><%= event.description %></p>
        <p><%= event.location %></p>
        <p><%= event.date %></p>
        <p><%= event.user.id %> </p>
      </div>
    <% end %>
    <% else %>
      <em>Sorry, no offers found.</em>
  <% end %>
</div>

<h1 class="event-page">Upcoming movienights</h1>

<div class="event-cards-container">
  <% if @events.any? %>
    <% @events.each do |event| %>
      <div class="event-card">
        <h4><%= event.title %></h4>
        <p><%= event.description %></p>
        <p><%= event.location %></p>
        <p><%= event.date %></p>
        <p><%= event.user.id %> </p>
      </div>
    <% end %>
    <% else %>
      <em>Sorry, no offers found.</em>
  <% end %>
</div>

<h1 class="event-page">Create a new Event</h1>

<%= simple_form_for @event do |form| %>
  <div class="form-input">
    <%= form.input :title %>
    <%= form.input :movie, collection: Movie.all %>
    <%= form.input :description %>
    <%= form.input :date, as: :date %>
    <%= form.input :location %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>
