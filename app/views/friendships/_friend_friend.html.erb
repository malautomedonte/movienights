<div class="user-card flex flex-wrap">
  <% if friend.friend.photo.attached? %>
    <%= cl_image_tag friend.friend.photo.key, class: "avatar" %>
    <% else %>
    <%= image_tag "default_avatar.jpeg", alt: "hello", class: "avatar"%>
<% end %>
  <div class="text m-b-8">
    <h4>
      <h3><%= link_to friend.friend.username, profile_path(friend.user) %></h3>
    </h4>
    <p class="m-0"><%= friend.friend.directors.pluck(:last_name).join(', ') %></p>
    <p class="m-0"><%= friend.friend.actors.pluck(:last_name).join(', ') %></p>
    <p class="m-0"><%= friend.friend.reviews.count %> movies reviewed</p>
    <p class="m-0"><%= friend.friend.events.count %> events attended</p>
    <p class="m-0">Has <%= friend.friend.friends.count %> friends</p>

    <ul class="display-inline ul-style-none w-100">
      <% friend.friend.genres.pluck(:title).each do |title| %>
        <li class="m-t-8"><span class="tag"><%= title %></span></li>
      <% end %>
    </ul>
  </div>
</div>
