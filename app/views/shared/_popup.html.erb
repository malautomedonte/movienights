
<div class="create-event">
  <i class="fa-regular fa-circle-xmark mouseover" data-action="click->popup#closeform"></i>
  <h5 class="event-page">Create a new Event</h5>

  <%= simple_form_for @event, data: {controller: "flatpickr"} do |form| %>
    <div class="form-input">
      <%= form.input :movie, collection: Movie.all %>
      <%= form.input :description %>
      <%= form.input :date, as: :string, input_html: { data: {flatpickr_target: "date"}} %>
      <%= form.input :location %>
    </div>

    <div class="form-actions">
      <%= form.button :submit, class: "create-button" %>
    </div>
  <% end %>
</div>
