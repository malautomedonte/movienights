<% if current_user%>
  <h1 class="h1-user-profile">This is your personal dashboard, <%= @user.username %>!</h1>
  <% else %>
    <h1 class="h1-user-profile">This is <%= @user.username %>'s profile!></h1>
<% end %>
<div class="container-user-page-details">
  <div class="user-details-page">
    <div class="user-card-details">
      <h2>Your profile pic <%= link_to "Edit", edit_user_registration_path, class: 'btn opacity-50' %></h2>
      <div>
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "picture-card-img" %>
          <% else %>
            <%= image_tag "default_avatar.jpeg", alt: "User Image",class: "picture-card-img"%>
        <% end %>
      </div>
      <h2>Your name: <%= @user.username %></h2>
      <h2>Your email: <%= @user.email %></h2>
    </div>
  </div>
  <div class="user-preferences-page">
    <div class="user-preferences-card">
      <div class="user-preferences-genres">
        <h2>Your Favorite genres</h2>
          <p><%= @user.genres.pluck(:title).join(', ') %></p>
      </div>
      <div class="user-preferences-directors">
        <h2>Your Favorite Directors</h2>
          <p><%= @user.directors.pluck(:last_name).join(', ') %></p>
      </div>
      <div class="user-preferences-actors">
        <h2>Your Favorite Actors</h2>
          <p><%= @user.actors.pluck(:last_name).join(', ') %></p>
      </div>
    </div>
  </div>
</div>

<div class="see-all-my-stuff">
  <h2>Your events
    <%= link_to events_path, class: "see-all-link" do %>
      See all <i class="fas fa-solid fa-arrow-right"></i>
    <% end %>
  </h2>
</div>




<div class="container-user-events-page">
  <div class="user-my-events-page">
  <div class="user-organized-events">
    <h2>I have created <%= @my_events.count %> events so far</h2>
  </div>
    <% if @my_events.present? %>
      <% @my_events.each do |event| %>
        <div class="event-card card">
          <h4><%= event.movie.title %></h4>
          <p><%= event.description %></p>
          <p><%= event.location %></p>
          <p><%= event.date %></p>
          <p><%= event.user.username %></p>
          <% if current_user && current_user.id == event.user_id %>
            <%= link_to edit_event_path(event) do %>
              <p><i class="fa-regular fa-pen-to-square edit-button"></i></p>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>No events created by you yet.</p>
    <% end %>
  </div>
  <div class="user-join-events-page">
      <div class="user-attending-events">
    <h2>I am attending to <%= @attended_events.count %> events so far</h2>
  </div>
    <% if @attended_events.present? %>
      <% @attended_events.each do |attended| %>
        <div class="event-card card">
          <h4><%= link_to attended.event.title, event_path(attended.event), class: "movie-link" %></h4>
          <h4><%= attended.event.movie.title %></h4>
          <p><%= attended.event.description %></p>
          <p><%= attended.event.location %></p>
          <p><%= attended.event.date %></p>
          <p><%= attended.event.user.username %></p>
          <p>You are attending!</p>
          <%= link_to "Cancel", event_user_path(id: attended.id, eventuser_id: attended, event_id: pages_myevents_path), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?' }, class: "cancel-button" %>
        </div>
      <% end %>
    <% else %>
      <p>No events attended by you yet.</p>
    <% end %>
  </div>
  <hr>
</div>


<div class="see-all-my-stuff">
  <h2>Your Friends
    <%= link_to friendships_path, class: "see-all-link" do %>
      See all <i class="fas fa-solid fa-arrow-right"></i>
    <% end %>
  </h2>
</div>


<div class="user-friends-page">
  <% if current_user.friends.any? %>
   <%= render 'shared/friends_cards', users: current_user.friends %>
   <% else %>
    <h2><em> Sorry, you have no friends... Yet!</em></h2>
  <% end %>
</div>


<div class="user-watchlist page">
      <div class="background_movies p-l-64 p-t-32">
      <section class="movie-recommendations m-y-24 p-b-42">
        <header class="flex center-vertically m-y-32 m-r-64">
          <h2 class="white">Your Watchlist</h2>
          <a href="#" class="see-all white">See All <i class="fas fa-solid fa-arrow-right"></i></a>
        </header>
        <div class="movies-horizontal-list"  data-controller="scroll">
          <button class="scroll-button left" data-action="click->scroll#scrollLeft">
            <i class="fas fa-circle-chevron-left"></i>
          </button>
          <% if current_user.preferred_content.present? %>
              <% current_user.preferred_content.each do |movie| %>
                <div class="movie-card card">
                  <%= image_tag movie.poster_url %>
                  <h3 class="white"><%= movie.title %></h3>
                </div>
              <% end %>
          <% else %>
            <h2 class="white">
              <em>Sorry, there's no movie recommendation yet.</em>
            </h2>
          <% end %>
          <button class="scroll-button right" data-action="click->scroll#scrollRight">
            <i class="fas fa-circle-chevron-right"></i>
          </button>
        </div>
      </section>
    </div>
  <!-- Watchlist content -->
</div>
